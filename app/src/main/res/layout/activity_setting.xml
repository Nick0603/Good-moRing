<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="310px"
        android:layout_marginTop="-100px"
        android:src="@mipmap/titlebar_2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/titlebar_2"
        tools:layout_editor_absoluteX="8dp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="1080px"
        android:layout_height="240px"
        android:background="@mipmap/btn_arrive_nor">

        <TextView
            android:id="@+id/textView"
            android:layout_width="182dp"
            android:layout_height="52dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="91dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="91dp"
            android:layout_marginTop="14dp"
            android:elegantTextHeight="false"
            android:fontFamily="SegoeUI"
            android:lineSpacingMultiplier="2.5"
            android:singleLine="false"
            android:text="09    00"
            android:textAlignment="center"
            android:textColor="#666666"
            android:textSize="120px"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="1080px"
        android:layout_height="240px"
        android:layout_marginTop="20px"
        android:background="@mipmap/btn_route_nor">

        <EditText
            android:id="@+id/ET_destionation"
            android:layout_width="394px"
            android:layout_height="110px"
            android:layout_marginLeft="170dp"
            android:layout_marginStart="172dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:fontFamily="MicrosoftJhengHeiBold"
            android:text="台北車站"
            android:textColor="#333333"
            android:textSize="48px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/iBtn_checkRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="315dp"
            android:layout_marginStart="315dp"
            android:layout_marginTop="27dp"
            android:src="@mipmap/btn_route_stare_nor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/btn_route_stare_nor" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="1080px"
        android:layout_height="240px"
        android:layout_marginTop="20px"
        android:background="@mipmap/btn_repeat_nor"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="344dp"
            android:layout_height="32dp"
            android:layout_marginLeft="43px"
            android:layout_marginStart="43px"
            android:layout_marginTop="33dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="95px"
                android:layout_height="95px"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="53px"
                android:layout_weight="1"
                android:src="@mipmap/big_s_off"
                app:srcCompat="@mipmap/big_s_off" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="95px"
                android:layout_height="95px"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="53px"
                android:layout_weight="1"
                android:src="@mipmap/big_m_on"
                app:srcCompat="@mipmap/big_m_on" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="95px"
                android:layout_height="95px"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="53px"
                android:layout_weight="1"
                android:src="@mipmap/big_t_on"
                app:srcCompat="@mipmap/big_t_on" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="95px"
                android:layout_height="95px"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="53px"
                android:layout_weight="1"
                android:src="@mipmap/big_w_on"
                app:srcCompat="@mipmap/big_w_on" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="95px"
                android:layout_height="95px"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="53px"
                android:layout_weight="1"
                android:src="@mipmap/big_th_on"
                app:srcCompat="@mipmap/big_th_on" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="95px"
                android:layout_height="95px"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="53px"
                android:layout_weight="1"
                android:src="@mipmap/big_f_on"
                app:srcCompat="@mipmap/big_f_on" />

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="95px"
                android:layout_height="95px"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="53px"
                android:layout_weight="1"
                android:src="@mipmap/big_st_off"
                app:srcCompat="@mipmap/big_st_off" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="1080px"
        android:layout_height="240px"
        android:layout_marginTop="20px"
        android:background="@mipmap/btn_gooutime_nor"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="182dp"
            android:layout_height="52dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="91dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="91dp"
            android:elegantTextHeight="false"
            android:fontFamily="SegoeUI"
            android:lineSpacingMultiplier="2.5"
            android:singleLine="false"
            android:text="00    30"
            android:textAlignment="center"
            android:textColor="#666666"
            android:textSize="120px"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="14dp" />

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="64dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"></LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="1080px"
        android:layout_height="240px"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="530px"
            android:layout_height="240px"
            android:layout_marginTop="20px"
            android:background="@mipmap/btn_condition_nor"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageButton
                android:id="@+id/iBtn_detectRoad"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="23dp"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/checkbox_on"
                tools:layout_editor_absoluteX="2dp" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="530px"
            android:layout_height="240px"
            android:layout_marginTop="20px"
            android:background="@mipmap/btn_condition_nor"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageButton
                android:id="@+id/iBtn_detectWeather"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="23dp"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/checkbox_on"
                tools:layout_editor_absoluteX="2dp" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0px"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/iBtn_cancel"
            android:layout_width="540px"
            android:layout_height="183px"
            android:layout_weight="1"
            android:src="@mipmap/btn_cancel_nor"
            app:srcCompat="@mipmap/btn_cancel_nor" />

        <ImageButton
            android:id="@+id/imageButton13"
            android:layout_width="540px"
            android:layout_height="183px"
            android:layout_weight="1"
            android:src="@mipmap/btn_apply_nor"
            app:srcCompat="@mipmap/btn_apply_nor" />
    </LinearLayout>

</LinearLayout>